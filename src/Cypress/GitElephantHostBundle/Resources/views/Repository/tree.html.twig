<table class="table table-striped table-bordered table-hover table-condensed">
    {% if path != '' %}
        <tr class="tree back">
            <td colspan="2">
                <i class="icon-arrow-left"></i>
                <a class="tree-object" href="{{ link_parent() }}">
                    &hellip;
                </a>
            </td>
        </tr>
    {% endif %}
    {% if tree.blob %}
        <tr><td colspan="2">{{ output_content(tree.blob)|highlight('php') }}</td></tr>
    {% else %}
        {% for treeObject in tree %}
            <tr class="{{ treeObject.type }}">
                <td>
                    {% if 'tree' == treeObject.type %}
                        <i class="icon-folder-close"></i>
                    {% elseif 'blob' == treeObject.type %}
                        <i class="icon-file"></i>
                    {% endif %}
                    <a class="tree-object" href="{{ treeObject|link_tree_object }}">
                        {{ treeObject }}
                    </a>
                </td>
                <td></td>
            </tr>
        {% endfor %}
    {% endif %}
</table>