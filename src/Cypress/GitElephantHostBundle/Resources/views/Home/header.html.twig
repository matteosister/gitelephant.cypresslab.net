<div class="navbar">
    <div class="navbar-inner">
        <a class="brand" href="{{ path('homepage') }}">GitElephant</a>
        <ul class="nav">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Repositories<b class="caret"></b></a>
                <ul class="dropdown-menu">
                    {% for repository in repositories %}
                        <li><a href="{{ path('repository', { slug: repository.slug }) }}">{{ repository }}</a></li>
                    {% endfor %}
                    {% if userRepositories %}
                        <li class="divider"></li>
                        {% for userRepository in userRepositories %}
                            <li><a href="{{ path('repository', { slug: userRepository.slug }) }}">{{ userRepository }}</a></li>
                        {% endfor %}
                    {% endif %}
                </ul>
            </li>
            {% if user.isLoggedIn %}
                <li><a href="{{ path('new_repository') }}">New repository</a></li>
            {% endif %}
        </ul>
        {{ user_login() }}
    </div>
</div>